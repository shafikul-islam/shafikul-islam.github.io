@import "bootstrap-variables";
@import "bootstrap/bootstrap";

/* Components */
@import "components/buttons";
@import "components/call";
@import "components/content";
@import "components/feature";
@import "components/fonts";
@import "components/footer";
@import "components/hamburger";
@import "components/header";
@import "components/intro-image";
@import "components/intro";
@import "components/logo";
@import "components/main-menu-mobile";
@import "components/main-menu";
@import "components/page";
@import "components/social";
@import "components/strip";
@import "components/sub-footer";
@import "components/title";
@import "components/type";

/* =========================================
   CUSTOM OVERRIDES (keep all custom CSS here)
   ========================================= */

/* Global */
:root {
  --container-max: 1120px;
  --accent: #2563eb;

  --ink: #0f172a;
  --muted: #475569;

  --blue: #2563eb;
  --purple: #7c3aed;
  --teal: #0f766e;
  --green: #16a34a;
  --amber: #d97706;
  --rose: #e11d48;
  --orange: #ea580c;
  --red: #dc2626;

  --border: rgba(15, 23, 42, 0.10);
  --shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
}

body { background: #f8f9fa; }

/* Container */
.container,
.page,
.content,
.page .wrapper,
.wrapper {
  max-width: var(--container-max);
  margin-left: auto;
  margin-right: auto;
  padding-left: 18px;
  padding-right: 18px;
  width: 100%;
}

/* Navbar */
.header { background: #fff; border-bottom: 1px solid #e2e8f0; }

.main-menu ul li a {
  font-weight: 700 !important;
  padding: 8px 16px;
  border-radius: 6px;
  transition: all 0.2s ease;
}
.main-menu ul li a:hover,
.main-menu ul li.active a {
  background: rgba(0,0,0,0.05);
  color: #000;
  text-decoration: none;
}

/* Hero */
.hero-container{
  display:flex;
  align-items:flex-start;
  justify-content:space-between;
  gap: 36px;
  margin-top: 30px;
  margin-bottom: 40px;
}
.hero-content{ flex:1; min-width:0; }
.hero-right{
  flex: 0 0 auto;
  display:flex;
  justify-content:flex-end;
  align-items:flex-start;
  padding-top: 26px;
}
.avatar-float{
  width: 340px;
  height: auto;
  object-fit: cover;
  border-radius: 18px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.18);
  border: 4px solid #ffffff;
}

@media (max-width: 900px){
  .hero-container{
    flex-direction: column-reverse;
    align-items: center;
    text-align: center;
    gap: 30px;
  }
  .hero-right{ justify-content:center; padding-top:0; margin-bottom:10px; }
  .avatar-float{ width: min(420px, 100%); }
}

/* Sections */
.section-news{
  background:#f6f9fc;
  padding: 32px;
  border-radius: 18px;
  margin-bottom: 40px;
}
.section-highlights{
  background:#fff;
  padding: 20px 0;
  margin-bottom: 40px;
}
.section-research{
  background:#fafafa;
  padding: 36px;
  border-radius: 18px;
  margin-bottom: 40px;
}

/* News */
.news-header{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom: 15px;
}
.news-controls{ display:flex; gap: 8px; }
.icon-btn{
  background:#fff;
  border: 1px solid #ddd;
  border-radius: 10px;
  padding: 8px 10px;
  cursor:pointer;
  transition: transform .15s ease, box-shadow .15s ease;
}
.icon-btn:hover{
  transform: translateY(-1px);
  box-shadow: 0 8px 18px rgba(15,23,42,0.10);
}
.news-scroller{
  max-height: 330px;
  overflow-y: auto;
  scroll-behavior: smooth;
  padding-right: 8px;
}
.news-items{ list-style:none; padding:0; margin:0; }
.news-items li{
  padding: 10px 10px;
  border-radius: 12px;
  border: 1px solid rgba(15,23,42,0.06);
  background: rgba(255,255,255,0.8);
  margin-bottom: 10px;
}
.news-date{
  font-weight: 700;
  color: rgba(15,23,42,0.65);
  margin-bottom: 4px;
}
.news-text{ color: var(--ink); line-height: 1.6; }

/* Highlights */
.hscroll{
  display:flex;
  gap: 20px;
  overflow-x:auto;
  padding: 10px 0 20px;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
}
.highlight-card{
  flex: 0 0 280px;
  background:#fff;
  border-radius: 12px;
  overflow:hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  scroll-snap-align: start;
}
.highlight-media{ position:relative; height: 180px; overflow:hidden; }
.highlight-media img{ width:100%; height:100%; object-fit: cover; }
.video-chip{
  position:absolute;
  top:10px; left:10px;
  background: rgba(0,0,0,0.7);
  color:#fff;
  font-size: .75rem;
  padding: 4px 10px;
  border-radius: 8px;
}

/* Featured Research (bigger images, no crop) */
.research-stack{
  display: grid;
  gap: 16px;
}

.research-card{
  display:grid;
  grid-template-columns: minmax(320px, 520px) 1fr;
  gap: 16px;
  padding: 16px;
  border-radius: 18px;
  border: 1px solid var(--border);
  box-shadow: var(--shadow);
  overflow:hidden;
  background:#fff;
}

@media (max-width: 920px){
  .research-card{ grid-template-columns: 1fr; }
}

.research-media{
  background: rgba(15,23,42,0.04);
  border: 1px solid rgba(15,23,42,0.06);
  border-radius: 16px;
  padding: 10px;
  display:flex;
  align-items:center;
  justify-content:center;
}
.research-media img{
  width:100%;
  height:auto;
  max-height: 340px;
  object-fit: contain;
  border-radius: 12px;
}

.tagrow{ display:flex; flex-wrap:wrap; gap: 8px; margin: 6px 0 0; }
.tag{
  display:inline-flex;
  padding: 6px 10px;
  border-radius: 999px;
  font-size: .83rem;
  font-weight: 800;
  border: 1px solid rgba(15,23,42,0.10);
}
.tag-blue   { background: rgba(37,99,235,0.12); color: var(--blue); border-color: rgba(37,99,235,0.25); }
.tag-purple { background: rgba(124,58,237,0.12); color: var(--purple); border-color: rgba(124,58,237,0.25); }
.tag-green  { background: rgba(22,163,74,0.12); color: var(--green); border-color: rgba(22,163,74,0.25); }
.tag-amber  { background: rgba(217,119,6,0.12); color: var(--amber); border-color: rgba(217,119,6,0.25); }
.tag-rose   { background: rgba(225,29,72,0.10); color: var(--rose); border-color: rgba(225,29,72,0.22); }
.tag-teal   { background: rgba(15,118,110,0.12); color: var(--teal); border-color: rgba(15,118,110,0.25); }
.tag-orange { background: rgba(234,88,12,0.12); color: var(--orange); border-color: rgba(234,88,12,0.25); }
.tag-red    { background: rgba(220,38,38,0.10); color: var(--red); border-color: rgba(220,38,38,0.22); }

/* Buttons */
.btn{
  display:inline-block;
  padding: 12px 18px;
  border-radius: 14px;
  font-weight: 900;
  text-decoration:none;
  background: linear-gradient(90deg, rgba(37,99,235,1), rgba(124,58,237,1));
  color:#fff !important;
  box-shadow: 0 14px 34px rgba(37,99,235,0.22);
}
.btn:hover{
  transform: translateY(-1px);
  box-shadow: 0 18px 44px rgba(37,99,235,0.28);
}

/* Footer */
footer, .site-footer, .footer{
  background: linear-gradient(180deg, #0b1220, #0a1020) !important;
  color: rgba(255,255,255,0.85) !important;
}
footer a, .site-footer a, .footer a{
  color: rgba(255,255,255,0.92) !important;
}